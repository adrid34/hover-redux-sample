{
  "name": "hoverboard",
  "version": "1.1.0",
  "description": "Very lightweight (anti-gravity?) Flux implementation.",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build-min": "webpack src/index.js dist/hoverboard.min.js -p --output-library Hoverboard",
    "build-full": "webpack src/index.js dist/hoverboard.js --output-library Hoverboard",
    "build": "npm run build-full && npm run build-min",
    "watch": "mocha -wGR nyan",
    "test-travis": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jesseskinner/hoverboard.git"
  },
  "keywords": [
    "flux",
    "reactjs",
    "javascript"
  ],
  "author": "Jesse Skinner <jesse@thefutureoftheweb.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesseskinner/hoverboard/issues"
  },
  "homepage": "https://github.com/jesseskinner/hoverboard",
  "dependencies": {
    "flux": "^2.0.1"
  },
  "devDependencies": {
    "chai": "^1.10.0",
    "istanbul": "^0.3.5",
    "mocha": "^2.1.0",
    "coveralls": "^2.11.2",
    "mocha-lcov-reporter": "0.0.1"
  }
}
