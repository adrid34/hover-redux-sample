{
  "name": "hoverboard",
  "version": "2.1.0",
  "description": "Very lightweight (anti-gravity?) Flux implementation.",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "minify-hoverboard": "uglifyjs dist/hoverboard.js -o dist/hoverboard.min.js -m -c",
    "minify-mixin": "uglifyjs dist/util/react/mixin.js -o dist/util/react/mixin.min.js -m -c",
    "minify": "npm run minify-hoverboard && npm run minify-mixin",
    "globalify-hoverboard": "sed 's/module.exports/var Hoverboard/' src/index.js > dist/hoverboard.js",
    "globalify-mixin": "sed 's/module.exports/var HoverboardMixin/' src/util/react/mixin.js > dist/util/react/mixin.js",
    "globalify": "npm run globalify-hoverboard && npm run globalify-mixin",
    "build": "npm test && npm run globalify && npm run minify",
    "watch": "mocha --recursive -wGR nyan",
    "test-travis": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "test": "mocha --recursive"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jesseskinner/hoverboard.git"
  },
  "keywords": [
    "flux",
    "reactjs",
    "javascript"
  ],
  "author": "Jesse Skinner <jesse@thefutureoftheweb.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesseskinner/hoverboard/issues"
  },
  "homepage": "https://github.com/jesseskinner/hoverboard",
  "dependencies": {},
  "devDependencies": {
    "chai": "^3.4.0",
    "coveralls": "^2.11.4",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.3",
    "mocha-lcov-reporter": "^1.0.0",
    "uglify-js": "^2.5.0"
  }
}
